<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_selected_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/common_selection_elevation"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_ic_delete_black_24dp"
            tools:ignore="ContentDescription" />

        <include
            layout="@layout/common_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/delete_call_button" />

        <ImageButton
            android:id="@+id/createContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:background="@color/common_white"
            android:padding="10dp"
            android:src="@drawable/ic_edit_black87_24dp"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/photo"
            android:layout_toStartOf="@id/createContact"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/common_black87"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/common_black87"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_black87"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/common_ic_call_black87_24dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/common_call"
            android:textAllCaps="false"
            android:textColor="@color/common_black87"
            android:textSize="20sp" />

        <Button
            android:id="@+id/message_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/common_ic_message_grey50_24dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/common_message"
            android:textAllCaps="false"
            android:textColor="@color/common_grey50"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>

